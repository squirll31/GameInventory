<h3>Recent Additions:</h3>
<table id="RecentGamesTable" class="table table-striped">
    <thead>
        <tr>
            <th class="col-md-2">Title</th>
            <th class="col-md-3">Platform</th>
            <th class="col-md-1">Region</th>
            <th class="col-md-1">Owner</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.RecentGameList)
        {
            @Html.DisplayFor(gameItem => item)
        }
    </tbody>
</table>

<script type="text/javascript">
    var dtDefaults = {
        "searching": false,
        "paging": false

    };
    $("#RecentGamesTable").DataTable(dtDefaults);
</script>