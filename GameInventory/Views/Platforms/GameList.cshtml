@model IEnumerable<GameInventory.Games_SelectAllByPlatform_Result>

<table id="GamesTable" class="table table-striped">
    <thead>
        <tr>
            <th class="col-md-2">
                Title
            </th>
            <th class="col-md-2">
                Model #
            </th>
            <th class="col-md-1">
                Region
            </th>
            <th class="col-md-1">
                Case?
            </th>
            <th class="col-md-1">
                Manual?
            </th>
            <th class="col-md-1">
                Owner
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">
                    @Html.ActionLink(item.Title, "Details", "Games", new { id = item.GameId }, null)
                </td>
                <td class="col-md-2">
                    @item.ModelName
                </td>
                <td class="col-md-1">
                    @Html.ActionLink(item.RegionName, "Details", "GameRegions", new { id = item.RegionId}, null)
                </td>
                <td class="col-md-1">
                    @item.HasCase
                </td>
                <td class="col-md-1">
                    @item.HasManual
                </td>
                <td class="col-md-1">
                    @Html.ActionLink(item.OwnerName, "Details", "GameOwners", new { id = item.OwnerId }, null)
                </td>
            </tr>        
        }
    </tbody>
</table>
